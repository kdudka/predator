#!/bin/sh
SL_OPTS="-verbose=1 $SL_OPTS"
SL_OPTS="-dump-pp $SL_OPTS"
SL_OPTS="-dump-types $SL_OPTS"
export SL_OPTS

if [ `uname` == Darwin ]; then
    ABSPATH='realpath'
else
    ABSPATH='readlink -f'
fi

self="`${ABSPATH} "$0"`"
self_dir="`dirname "$self"`"
"$self_dir/`basename "$self" | sed 's|slllvmv|slllvm|'`" "$@"
